<h1 class="text-center mb-4">Welcome to my todolist app</i></h1>
<div class="container">

<%= render 'layouts/task_form'  %>
  <ul>
  <% @categories.each do  |category|%>
  <li><%= category.title  %></li>
  <div class="card">
    <ul id="<%= category.title %>">
      <% category.tasks.each do |task|  %>
      <li id="task<%=task.id%>">
        <%= task.title  %>
        <% unless task.deadline.nil? %>
          , to read: <%= task.deadline.strftime('%D')  %>
            <a href="<%=task_path(task.id)%>" data-remote="true" data-confirm="ëtes-vous sûr ?" data-method="delete"><i class="fas fa-dumpster"></i></a>

        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  </ul>
</div>

<div class="container">
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="card col-3">
        <% unless task.image.nil? %>
          <%= image_tag task.image, class: "rounded-circle" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
